\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{simplesong}
  [package for my own purpose]
  

\newenvironment{song}[4][]{
    \noindent
    #3\hfill \ifthenelse{\equal{#1}{}}{}{Kapo im #1. Bund}\newline
    \vspace{-10mm}
    \section{#2}
    \setcounter{page}{\thesection}
    \index{#2}
    \ifthenelse{\equal{#4}{}}{}{{\small\itshape\color{gray}#4\hfill}}

    \begin{guitar}
}{
    \end{guitar}
}

\newcommand{\einlied}[2]{
    \fancyfoot{}
    \fancyfoot[LE, RO]{Lied \thesection}
    \fancyfoot[C]{#2}
    \subfile{songs/#1}
    \clearpage
}

\newcommand{\zweilieder}[3]{
    \fancyfoot{}
    \fancyfoot[LE, RO]{\addtocounter{section}{-1} Lieder \thesection\addtocounter{section}{1} - \thesection}
    \fancyfoot[C]{#3}
    \subfile{songs/#1}
    \vspace{1cm}\newline
    \subfile{songs/#2}
    \clearpage
}

\newcommand{\dreilieder}[4]{
    \fancyfoot{}
    \fancyfoot[LE, RO]{\addtocounter{section}{-2} Lieder \thesection\addtocounter{section}{2} - \thesection}
    \fancyfoot[C]{#4}
    \subfile{songs/#1}
    \vspace{1cm}\newline
    \subfile{songs/#2}
    \vspace{1cm}\newline
    \subfile{songs/#3}
    \clearpage
}


