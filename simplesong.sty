\newenvironment{songwithoutpagebreak}[4][]{
    \noindent
    #3\hfill \ifthenelse{\equal{#1}{}}{}{Kapo im #1. Bund}\\
    \vspace{-10mm}
    \section{#2}
    \fancyfoot[LE, RO]{Lied \thesection}\fancyfoot[C]{#2}
    \setcounter{page}{\thesection}
    \index{#2}
    \ifthenelse{\equal{#4}{}}{}{{\small\itshape\color{gray}#4}}
    
    \begin{guitar}
}{
    \end{guitar}
}

